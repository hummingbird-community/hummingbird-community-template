{{#ci.validation}}
name: Validity Check

on:
{{#validation}}
  pull_request:
{{/validation}}
  workflow_dispatch:
  
jobs:
  validate:
    runs-on: macOS-latest
    timeout-minutes: 15
    steps:
    - name: Checkout
      uses: actions/checkout@v4
      with:
        fetch-depth: 1
    - name: Install Dependencies
      run: |
        brew install mint
        mint install NickLockwood/SwiftFormat@0.51.15 --no-link
    - name: run script
      run: ./scripts/validate.sh
{{/ci.validation}}